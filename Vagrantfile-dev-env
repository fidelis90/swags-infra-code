# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.define "dev" do |dev|
    dev.vm.box = "centos/7"
    dev.vm.network "public_network", ip: "192.168.1.83"
  end

  config.vm.define "prod" do |prod|
    prod.vm.box = "centos/7"
    prod.vm.network "public_network", ip: "192.168.1.46"
    config.vm.provider "virtualbox" do |prod|
      prod.memory = 4096
      prod.cpus = 4
    end
  end
end
